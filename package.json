{
  "name": "vue-steam-chat",
  "version": "0.0.1",
  "description": "A Vue.js component to imitate the steam chat.",
  "author": "igeligel <kevinigeligeligel@gmail.com>",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src",
    "build": "vue build ./src/index.js --config ./build.config.js --dist ./dist/ --prod --lib",
    "build:doc": "vue-styleguidist build",
    "serve": "vue-styleguidist server",
    "test": "jest",
    "test:coverage": "node --harmony_proxies node_modules/.bin/jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "keywords": [
    "vue",
    "component",
    "steam",
    "chat",
    "csgo",
    "gambling"
  ],
  "files": [
    "dist/"
  ],
  "dependencies": {
    "vue": "^2.4.1"
  },
  "devDependencies": {
    "babel-jest": "^21.0.2",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^2.13.1",
    "eslint": "^3.17.1",
    "eslint-plugin-vue": "beta",
    "jest": "^21.1.0",
    "jest-vue-preprocessor": "^1.1.0",
    "sinon": "^3.3.0",
    "vue-cli": "^2.8.2",
    "vue-styleguidist": "^1.2.5",
    "vue-test-utils": "https://github.com/vuejs/vue-test-utils",
    "vue-webpack-loaders": "^1.0.6",
    "webpack": "^3.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    }
  }
}
