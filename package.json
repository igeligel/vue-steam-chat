{
  "name": "vue-steam-chat",
  "version": "1.0.0",
  "description": "A Vue.js component to imitate the steam chat.",
  "author": "igeligel <kevinigeligeligel@gmail.com>",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src",
    "build":
      "node ./node_modules/poi/bin/cli.js build ./src/index.js --format cjs",
    "build:doc": "vue-styleguidist build",
    "serve": "vue-styleguidist server",
    "test": "jest",
    "test:coverage":
      "node node_modules/.bin/jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css,md,vue}": ["prettier --write", "git add"]
  },
  "keywords": ["vue", "component", "steam", "chat", "csgo", "gambling"],
  "files": ["dist/"],
  "repository": {
    "type": "git",
    "url": "https://github.com/igeligel/vue-steam-chat.git"
  },
  "bugs": {
    "url": "https://github.com/igeligel/vue-steam-chat/issues"
  },
  "homepage":
    "https://github.com/igeligel/vue-steam-chat#vue-steam-chat---a-steam-like-chat-component",
  "dependencies": {
    "vue": "2.5.16"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.14",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^2.13.3",
    "css-loader": "^0.28.11",
    "eslint": "^3.19.0",
    "eslint-plugin-vue": "^4.4.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-vue-preprocessor": "^1.4.0",
    "lint-staged": "^7.0.4",
    "poi": "^9.6.13",
    "prettier": "^1.12.0",
    "sinon": "^3.3.0",
    "vue-loader": "^14.2.2",
    "vue-styleguidist": "^1.7.3",
    "vue-template-compiler": "^2.5.16",
    "vue-template-es2015-compiler": "^1.6.0",
    "vue-webpack-loaders": "^1.0.6",
    "webpack": "^3.11.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "vue"],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    }
  }
}
